# Database – Google Cloud SQL (PostgreSQL)
# Format: postgresql://USER:PASSWORD@PUBLIC_IP:5432/DATABASE?sslmode=require
# Get your instance IP from: https://console.cloud.google.com/sql/instances
DATABASE_URL="postgresql://postgres:your-password@YOUR_CLOUD_SQL_IP:5432/legacyre?sslmode=require"

# NextAuth
# NEXTAUTH_URL must match your deployed domain (Netlify infers it, but set it explicitly to be safe)
# For Netlify: use your production URL, e.g. https://your-site.netlify.app or your custom domain
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="generate-a-secret-key-here"

# OpenAI API
OPENAI_API_KEY="sk-proj-your-api-key-here"

# Anthropic API (for AI building image analysis)
# Get your API key from: https://console.anthropic.com/
ANTHROPIC_API_KEY="sk-ant-api-your-api-key-here"

# RentCast API (for public property records — lot size, sale history)
# Free tier: 50 calls/month. Get your key at: https://app.rentcast.io/app/api
RENTCAST_API_KEY=""

# FRED API (for live Federal Reserve interest rate data)
# Free. Get your key at: https://fred.stlouisfed.org/docs/api/api_key.html
FRED_API_KEY=""

# Google Maps API (for property location maps and geocoding)
# Get your API key from: https://console.cloud.google.com/google/maps-apis
# Enable both "Maps JavaScript API" and "Geocoding API" for full functionality
NEXT_PUBLIC_GOOGLE_MAPS_API_KEY="your-google-maps-api-key-here"

# AWS S3 for File Storage (optional, can use local storage for dev)
AWS_ACCESS_KEY_ID="your-access-key"
AWS_SECRET_ACCESS_KEY="your-secret-key"
AWS_REGION="us-east-1"
AWS_S3_BUCKET="valora-uploads"

# Email Service (SendGrid, AWS SES, etc.)
EMAIL_FROM="noreply@loud-legacy.com"
SMTP_HOST="smtp.sendgrid.net"
SMTP_PORT="587"
SMTP_USER="apikey"
SMTP_PASSWORD="your-sendgrid-api-key"

# Stripe (for payments)
STRIPE_SECRET_KEY="sk_test_your-stripe-secret-key"
STRIPE_PUBLISHABLE_KEY="pk_test_your-stripe-publishable-key"
STRIPE_WEBHOOK_SECRET="whsec_your-webhook-secret"

# Stripe Price IDs (create products in Stripe Dashboard)
STRIPE_STARTER_MONTHLY_PRICE_ID=""
STRIPE_STARTER_YEARLY_PRICE_ID=""
STRIPE_PRO_MONTHLY_PRICE_ID=""
STRIPE_PRO_YEARLY_PRICE_ID=""
STRIPE_ALL_ACCESS_MONTHLY_PRICE_ID=""
STRIPE_ALL_ACCESS_YEARLY_PRICE_ID=""

# Google OAuth (optional - for "Sign in with Google")
# Get credentials at: https://console.cloud.google.com/apis/credentials
# IMPORTANT: Add this redirect URI to your OAuth client's "Authorized redirect URIs":
#   {NEXTAUTH_URL}/api/auth/callback/google
# For example: https://your-site.netlify.app/api/auth/callback/google
GOOGLE_CLIENT_ID=""
GOOGLE_CLIENT_SECRET=""

# App Configuration
NODE_ENV="development"
NEXT_PUBLIC_APP_URL="http://localhost:3000"
